<% layout("../layouts/boilerplate") %>
<div class="col-md-8 col-sm-2 offset-md-3">
  <div class="list-card col-sm-2 card mt-1 show-card">
    <h3>List Details</h3>

    <img
      src="<%= listing.image.url %>"
      class="card-img-top"
        alt="listing_image" 
    />
    <div class="card-body">
      <h4 class="card-title"><%= listing.title %></h4>
      <p class="card-text">
        Owned by <b><%= listing.owner.username %></b> <br />
        <%= listing.description %> <br />
        <b>
          â‚¹<%= listing.price.toLocaleString("en-IN")%> <br />
        </b>
        <%= listing.location%> <br />
        <%= listing.country%>
      </p>
    </div>
  </div>

  <div class="btns mb-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn"
      >Edit</a
    >

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div>
  <!-- <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %> -->
  <!-- <% } %>  -->
  <hr class="mb-3 col-8" />

  <form
    action="/listings/<%= listing._id %>/reviews"
    class="mb-3 col-8 needs-validation"
    novalidate
    method="post"
  >
    <h4>Leave a Rating</h4>
    <label for="rating" class="form-label">
      <fieldset class="starability-slot">
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </label>

    <label for="comment" class="form-label"> Comments</label>
    <textarea
      name="review[comment]"
      id="comment"
      cols="30"
      rows="10"
      class="form-control"
      required
    ></textarea>
    <div class="invalid-feedback">This area should be filled</div>
    <button class="btn btn-outline-dark mt-2">Add</button>
  </form>

  <% if (listing.reviews.length) { %>

  <div class="row col-8">
    <hr />

    <h3>All Listings</h3>

    <% for (let review of listing.reviews){ %>
    <div class="col-5 card m-2 p-4">
      <p><%= review.author.username %></p>
      <p><%= review.comment %></p>
      <p class="starability-result" data-rating="<%= review.rating %>"></p>

      <form
        method="POST"
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
      >
        <button class="btn btn-dark btn-sm">Delete</button>
      </form>
    </div>

    <% } %>
  </div>
  <% } %>

  <!-- <div class="col-md-8 col-sm-2">
    <h3>Where you'll be</h3>
    <div id="map">
     
    </div>
  </div> -->
</div>
