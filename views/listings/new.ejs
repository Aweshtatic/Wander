<% layout("../layouts/boilerplate") %>
    <div class="row ">

        <div class="col-8 mt-2">
            <h3>Add New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">


                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" placeholder="Add a catchy name" class="form-control" required>
                    <div class="invalid-feedback">This area should be filled</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]"  class="form-control" required></textarea>
                    <div class="invalid-feedback">This area should be filled</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" type="file" placeholder="Image link/url" class="form-control" required>
                    <div class="invalid-feedback">This area should be filled</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" placeholder="1200" class="form-control" required>
                    <div class="invalid-feedback">This area should be filled</div>
                </div>
                <div class="row ">
                    <div class="mb-3 col-md-4 ">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" type="text" placeholder="Jaipur, Rajasthan" class="form-control" required>
                        <div class="invalid-feedback">This area should be filled</div>
                    </div>
                    <div class="mb-3 col-md-8 ">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" type="text" placeholder="India"  class="form-control"  required>
                        <div class="invalid-feedback">This area should be filled</div>
                    </div>
                </div>

                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>